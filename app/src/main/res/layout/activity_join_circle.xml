<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinCircleActivity"
    android:background="@color/blue_gradient_end">

    <Button
        android:id="@+id/button8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/pinview"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/size_100"
        android:layout_marginBottom="305dp"
        android:backgroundTint="@color/light_blue"
        android:onClick="submitButtonClick"
        android:text="Submit" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="406dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Enter circle code to join"
        android:textSize="25sp" />

    <com.goodiebag.pinview.Pinview
        android:id="@+id/pinview"
        android:layout_width="wrap_content"
        android:layout_height="93dp"
        android:layout_below="@+id/textView3"
        android:layout_centerInParent="true"
        app:pinWidth="@dimen/size_35"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/size_20"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="405dp"
        app:pinLength="6"
        app:cursorVisible="true"
        app:forceKeyboard="true"
        app:inputType="number">

    </com.goodiebag.pinview.Pinview>
</RelativeLayout>